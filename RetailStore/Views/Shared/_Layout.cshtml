<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <script>
        var WebApiURL = "@RetailStore.CommonLibrary.ApplicationConfig.RetailStoreWebAPI";

    </script>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="~/">Retail Store</a></p>
            </div>
            <div class="float-right">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Search By ID", "SearchByID", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Search By Category", "SearchByID", "Home", new { area = "" }, null)</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/RetailStoreFiles")
    @RenderSection("scripts", required: false)

      @RenderBody()
</body>
</html>
